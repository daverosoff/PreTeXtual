  #     pop: true
  #   - include: tag-stuff
  #   - include: single-quoted-string
  #   - include: double-quoted-string
  # mbx-exercise-like:
    # - meta_scope: tag.exercise-like.xml.mbx meta.tag.xml
    # - match: '>'
    #   scope: punctuation.definition.tag.end.xml
    #   pop: true
    # - include: tag-stuff
    # - include: single-quoted-string
    # - include: double-quoted-string
  mbx-remark-like:
    - meta_scope: tag.remark-like.xml.mbx meta.tag.xml
    - match: '>'
      scope: punctuation.definition.tag.end.xml
      pop: true
    - include: tag-stuff
    - include: single-quoted-string
    - include: double-quoted-string
  mbx-theorem-like:
    - meta_scope: tag.theorem-like.xml.mbx meta.tag.xml
    - match: '>'
      scope: punctuation.definition.tag.end.xml
      pop: true
    - include: tag-stuff
    - include: single-quoted-string
    - include: double-quoted-string
